version: "3.9"

networks:
  fm-project-network:
    driver: bridge

services:
  fm-project-mysql:
    image: mysql:8.0
    environment:
      MYSQL_ALLOW_EMPTY_PASSWORD: "yes"
    ports:
      - "3306:3306"
    networks:
      - fm-project-network

  fm-project-api:
    image: josiassxz/fm-projectfinalversion
    command: ["java", "-jar", "fmproject.jar"]
    environment:
      DB_HOST: "fm-project-mysql"
    ports:
      - "8080:8080"
    networks:
      - fm-project-network
    depends_on:
      - fm-project-mysql
    volumes:
      - /home/ubuntu/arquivos:/home/ubuntu/arquivos
      # Adicionamos o volume acima para compartilhar o diret√≥rio com o host

  fminspecao:
    image: josiassxz/fminspect-front
    build: .
    ports:
      - "8081:80"
    networks:
      - fm-project-network
    entrypoint: /bin/sh -c "mkdir -p /home/ubuntu/arquivos && chmod 777 /home/ubuntu/arquivos && nginx -g 'daemon off;'"

volumes:
  storage-local:
